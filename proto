from tkinter import *
from tkinter import ttk
from tkinter import messagebox
import sys
i = 0

def luuletus():
    a = t.get(1.0,END)
    a = str(a.strip())
    a = a.split("\n")
    print(a)
    raam.destroy()
    def luuletus2(i):
        b = c.get()
        b = str(b.strip())
        print(b)
        if a[i] == b:
            messagebox.showinfo(message="Väga tubli")
            c.delete(0, END)
            i+=1
            print(i)
            return i
        else:
            messagebox.showinfo(message="Läks valesti, aga pole hullu")
            c.delete(0, END)
    raam2 = Tk()
    raam2.title("Luuletuse meeldejätmine")
    raam2.geometry("300x350")
    nupp2 = Button(raam2,text = "OK",command =lambda: luuletus2(i), fg="red",bg="blue").pack()
    c = Entry(raam2)
    c.pack()

    
raam = Tk()
raam.title("Luuletuse sisestamine")
raam.geometry("300x350")
nupp = Button(raam,text = "OK",command =luuletus, fg="red",bg="blue").pack()
t = Text(raam, width=30,height=10)
t.place(x=30,y=30)


